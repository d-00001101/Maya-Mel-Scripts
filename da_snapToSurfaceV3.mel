///////////////////////////////////////////////////////////////////////////////////////////* 	This script will snap a cv or vertex to the closest point	on a nurbs surface	-select one or more cvs or verteces	-shift select the surface 	-run script*///////////////////////////////////////////////////////////////////////////////////////////global proc da_snapToSurfaceV2(){string $selection[];$selection = `ls -fl -sl`;int $size = size($selection);string $surfaceShape[] = `listRelatives -c $selection[($size - 1)]`;string $CPOSNodes[] = `listConnections -t closestPointOnSurface $surfaceShape[0]`;if (!size($CPOSNodes)){$CPOSNodes[0] = `createNode closestPointOnSurface`;connectAttr -f ($surfaceShape[0] + ".worldSpace[0]") ($CPOSNodes[0] + ".inputSurface");}$size--;float $position[];int $i;for ($i = 0; $i < $size; $i++){$position =`xform -q -ws -t $selection[$i]`; //print ($position);setAttr ($CPOSNodes[0] + ".inPositionX") $position[0];setAttr ($CPOSNodes[0] + ".inPositionY") $position[1];setAttr ($CPOSNodes[0] + ".inPositionZ") $position[2];float $myPos[];$myPos = `getAttr ($CPOSNodes[0] + ".position")`;xform -ws -t $myPos[0] $myPos[1] $myPos[2] $selection[$i]; }delete $CPOSNodes[0];//select $selection[0];}